[[workflows.workflow]]
name = "Create Database Tables"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python backend/create_tables.py"

[deployment]
run = ["sh", "-c", "python backend/run.py"]

